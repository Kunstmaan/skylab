server {
    {% for port in ports %}
    listen      {{port}};
    {% endfor %}

    server_name     {% for alias in aliases %}{{alias}} {% endfor %};
    root            {{root}};
    error_log       {{error_log}};
    access_log      {{access_log}};

    location ~*  \.(jpg|jpeg|png|gif|ico|css|js|svg|woff)$ {
        expires 365d;
        try_files $uri /app.php$is_args$args;
    }

    {% for config in configs %}
        include         {{config}};
    {% endfor %}
}
